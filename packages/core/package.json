{
  "name": "@studioantipodes/detent-core",
  "version": "0.1.0",
  "description": "Framework-agnostic drawer component core with gesture detection and spring physics",
  "license": "MIT",
  "author": "Studio Antipodes",
  "repository": {
    "type": "git",
    "url": "https://github.com/romainvalla/detent",
    "directory": "packages/core"
  },
  "keywords": [
    "drawer",
    "sheet",
    "bottom-sheet",
    "gesture",
    "animation",
    "spring-physics",
    "framework-agnostic",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "biome check .",
    "clean": "rm -rf dist .turbo node_modules",
    "prepublishOnly": "pnpm run build && pnpm run test && pnpm run type-check"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@vitest/coverage-v8": "^1.2.0",
    "jsdom": "^23.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
